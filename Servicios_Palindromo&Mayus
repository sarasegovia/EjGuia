#include <stdio.h>
#include <string.h>
#include <stdlib.h

int main(int argc, char *argv[]){
	
	char nombre[20];
	int longitud = strlen(nombre);
	int i;
	int j = 0;
	int k = longitud-1;
	
	printf("Nombre:");
	scanf("%s", nombre);
	
	for(k=0;k<=longitud;k++)
	{
		nombre[i] = toupper(nombre[i]);
	}
	printf("Tu nombre en mayúsculas: %s",nombre);
	
	if(nombre[i] == nombre[j])
		{
			i++;
			j--;
			if(i >= j)
				printf("Tu nombre es palíndromo.\n");
		}
	
	else
		printf("Tu nomber NO es palíndromo.\n");
}
